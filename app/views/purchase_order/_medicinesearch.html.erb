<div class="container" id="search1">
  <%= form_tag(get_medicine_purchase_order_path, method: 'get', remote: true, class: 'navbar-form navbar-left') do %>
    <div class="input-group">
      <%= text_field_tag :search, nil, required: true, id: 'search_medicines', placeholder: "Search Medicines..." %>
      <%= hidden_field_tag :purchase_order_sequence_num, @purchase_order.sequence_num%>
      <div class="input-group-btn">
        <%= submit_tag t('submit'), class: 'btn btn-info glyphicon glyphicon-search', name: nil %>
      </div>
    </div>
  <% end %>
</div>
