<%= form_for @medicine do |f| %>
  <div class="container  pt-3">
      <div class="card">
        <div class="card-header p-3 container-fluid">
          <div class="row">
            <h3 class="col-md-9">
              <%= t('medicine.edit_medicine_label') %>
            </h3>
          </div>
        </div>
        <div class="card-body">
          <p>
            <div class="form-group">
              <label><%= t('medicine.name_label') %></label>
              <%= f.text_field :name, required: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <label><%= t('medicine.price_label') %></label>
              <%= f.number_field :price, value: number_to_currency(f.object.price.to_f, delimiter: '', unit: ''), step: :any, min: 1, required: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <label><%= t('medicine.quantity_label') %></label>
              <%= f.number_field :quantity, min: 1, required: true, class: "form-control"  %>
            </div>
          </p>
        </div>
        <div class="card-footer p-3 container-fluid">
          <div class="row d-flex justify-content-md-end">
            <div class="col-md-3 d-flex justify-content-md-end">
              <%= f.submit t('update'), class: "btn btn-primary btn-spacing" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
