<%= form_for @purchase_order, url: { action: :create } do |f| %>
  <div class="container  pt-3">
      <div class="card">
        <div class="card-header p-3 container-fluid">
          <div class="row">
            <h3 class="col-md-9">
              <%= t('purchase_order.add_order_label') %>
            </h3>
          </div>
        </div>
        <div class="card-body">
          <p>
            <div class="form-group">
              <label><%= t('purchase_order.name_label') %></label>
              <%= f.text_field :vendorname, required: true, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.hidden_field :price, value: 0 %>
            </div>
            <div class="form-group">
              <label><%= t('purchase_order.state_label') %></label>
              <%= f.text_field :state, value: 'drafted', required: true, disabled: true, class: 'form-control' %>
            </div>
          </p>
        </div>
        <div class="card-footer p-3 container-fluid">
          <div class="row d-flex justify-content-md-end">
            <div class="col-md-3 d-flex justify-content-md-end">
              <%= link_to t('cancel'), purchase_order_index_path , class: "btn btn-secondary btn-spacing" %>
              <%= f.submit t('create'), class: "btn btn-primary btn-spacing" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
