<%= render "users/shared/error_messages", resource: resource %>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <div class="container w-50 card_center">
    <div class="card card-border">
      <div class="card-body m-5">
        <div class="text-center p-3 container-fluid">
          <div class="row">
            <h1 class="col-md-12">
              <%= t('guest.welcome_msg') %>
            </h1>
          </div>
        </div>
        <div class="pt-25">
          <div class="separator"></div>
        </div>
        <div class="row mt-3 ml-2 font-for-card">
          <h3><%= t('guest.confirm_email') %></h3>
        </div>
        <div class="row ml-0 font-for-card">
          <h5 class="px-2 pt-2 msg-color"><%= t('guest.confirm_email_msg') %>
          </h5>
        </div>
        <p>
          <div class="row py-2 pl-2 mr-1">
            <label class="col-3"><%= t('guest.profile.email') %></label>
            <div class="pl-0 col-9">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
            </div>
          </div>
        </p>
        <div class="row">
          <div class="col-md-12 text-center">
            <%= f.submit t('submit') , class: "btn hover-button button-width" %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="text-center col-md-12">
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
