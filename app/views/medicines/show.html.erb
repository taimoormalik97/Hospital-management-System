<div class="container  pt-3">
  <div class="card">
    <div class="card-header p-3 container-fluid">
      <div class="row">
        <h3 class="col-md-8"><%= @medicine.name %></h3>
        <div class="col-md-4 d-flex justify-content-md-end">
          <% if can? :destroy, @medicine %>
            <%= link_to t('delete'), medicine_path(@medicine), method: :delete, class: "btn btn-danger", data: { confirm: t('medicine.delete_confirm') } %>
          <%end%>
          <%= link_to t('edit'), edit_medicine_path(@medicine), class: "btn btn-primary btn-spacing" %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-2">
          <label><%= t('medicine.name_label') %></label>
        </dt>
        <dd class="col-sm-9">
          <%= @medicine.name %>
        </dd>
        <dt class="col-sm-2">
          <label><%= t('medicine.price_label') %></label>
        </dt>
        <dd class="col-sm-9">
          <%= @medicine.price %>
        </dd>
        <dt class="col-sm-2">
          <label><%= t('medicine.quantity_label') %></label>
        </dt>
        <dd class="col-sm-9">
          <%= @medicine.quantity %>
        </dd>
      </dl>
    </div>
  </div>
</div>

